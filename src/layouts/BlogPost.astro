---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, category = "Fitness" } = Astro.props;
---

<html lang="fr">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 100%;
				max-width: 100%;
				margin: 0;
				padding-bottom: 4rem;
			}
			
			.blog-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1rem;
			}
			
			.hero-section {
				position: relative;
				height: 500px;
				width: 100%;
				overflow: hidden;
				margin-bottom: 2rem;
			}
			
			.hero-image {
				width: 100%;
				height: 100%;
			}
			
			.hero-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				filter: brightness(0.8);
			}
			
			.title-overlay {
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
				padding: 3rem 2rem 2rem;
				color: white;
			}
			
			.title-overlay h1 {
				font-size: 3rem;
				margin: 0;
				line-height: 1.2;
				max-width: 800px;
			}
			
			.category-badge {
				display: inline-block;
				padding: 0.5rem 1rem;
				background-color: var(--accent);
				color: white;
				border-radius: 20px;
				font-size: 0.9rem;
				margin-bottom: 1rem;
				font-weight: 500;
			}
			
			.article-meta {
				display: flex;
				align-items: center;
				margin-top: 1rem;
				font-size: 0.9rem;
			}
			
			.article-meta .avatar {
				width: 40px;
				height: 40px;
				border-radius: 50%;
				margin-right: 0.8rem;
				background-color: #f0f0f0;
				display: flex;
				align-items: center;
				justify-content: center;
				font-weight: bold;
				color: var(--accent);
			}
			
			.article-meta .date {
				margin-left: 1rem;
				color: rgba(255, 255, 255, 0.8);
			}
			
			.article-meta .date svg {
				width: 16px;
				height: 16px;
				margin-right: 5px;
				fill: rgba(255, 255, 255, 0.8);
				vertical-align: -3px;
			}
			
			.content-wrapper {
				display: grid;
				grid-template-columns: 1fr 300px;
				gap: 3rem;
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1rem;
			}
			
			.prose {
				width: 100%;
				color: rgb(var(--gray-dark));
				line-height: 1.7;
				font-size: 1.1rem;
			}
			
			.prose h2 {
				margin-top: 2.5rem;
				margin-bottom: 1rem;
				font-size: 1.8rem;
				color: rgb(var(--black));
			}
			
			.prose h3 {
				margin-top: 2rem;
				margin-bottom: 0.8rem;
				font-size: 1.5rem;
				color: rgb(var(--black));
			}
			
			.prose p {
				margin-bottom: 1.5rem;
			}
			
			.prose img {
				max-width: 100%;
				border-radius: 8px;
				margin: 2rem 0;
			}
			
			.prose ul, .prose ol {
				margin-bottom: 1.5rem;
				padding-left: 1.5rem;
			}
			
			.prose li {
				margin-bottom: 0.5rem;
			}
			
			.prose blockquote {
				margin: 2rem 0;
				padding: 1rem 1.5rem;
				border-left: 4px solid var(--accent);
				background-color: rgba(255, 69, 0, 0.05);
				font-style: italic;
				color: rgb(var(--gray-dark));
			}
			
			.share-section {
				margin-top: 3rem;
				border-top: 1px solid rgb(var(--gray-light));
				padding-top: 2rem;
			}
			
			.share-title {
				font-size: 1.1rem;
				margin-bottom: 1rem;
				font-weight: bold;
			}
			
			.share-buttons {
				display: flex;
				gap: 1rem;
			}
			
			.share-button {
				width: 40px;
				height: 40px;
				border-radius: 50%;
				background-color: #f0f0f0;
				display: flex;
				align-items: center;
				justify-content: center;
				transition: all 0.3s ease;
			}
			
			.share-button:hover {
				background-color: var(--accent);
			}
			
			.share-button:hover svg {
				fill: white;
			}
			
			.share-button svg {
				width: 20px;
				height: 20px;
				fill: rgb(var(--gray-dark));
				transition: all 0.3s ease;
			}
			
			.sidebar {
				position: sticky;
				top: 100px;
				align-self: start;
			}
			
			.sidebar-widget {
				background-color: #f8f9fa;
				border-radius: 8px;
				padding: 1.5rem;
				margin-bottom: 2rem;
			}
			
			.sidebar-widget h3 {
				margin-top: 0;
				margin-bottom: 1rem;
				font-size: 1.3rem;
				color: rgb(var(--black));
			}
			
			.author-widget {
				text-align: center;
			}
			
			.author-avatar {
				width: 80px;
				height: 80px;
				border-radius: 50%;
				margin: 0 auto 1rem;
				background-color: var(--accent);
				display: flex;
				align-items: center;
				justify-content: center;
				color: white;
				font-size: 2rem;
				font-weight: bold;
			}
			
			.author-name {
				font-size: 1.2rem;
				font-weight: bold;
				margin-bottom: 0.5rem;
			}
			
			.author-bio {
				font-size: 0.9rem;
				color: rgb(var(--gray));
				margin-bottom: 1rem;
			}
			
			.cta-widget {
				background-color: var(--accent);
				color: white;
				text-align: center;
			}
			
			.cta-widget h3 {
				color: white;
			}
			
			.cta-button {
				display: inline-block;
				padding: 0.8rem 1.5rem;
				background-color: white;
				color: var(--accent);
				text-decoration: none;
				font-weight: bold;
				border-radius: 4px;
				margin-top: 1rem;
				transition: transform 0.3s ease;
			}
			
			.cta-button:hover {
				transform: translateY(-3px);
			}
			
			.related-posts ul {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			
			.related-posts li {
				margin-bottom: 1rem;
				padding-bottom: 1rem;
				border-bottom: 1px solid #eee;
			}
			
			.related-posts li:last-child {
				margin-bottom: 0;
				padding-bottom: 0;
				border-bottom: none;
			}
			
			.related-posts a {
				text-decoration: none;
				color: rgb(var(--gray-dark));
				font-weight: 500;
				transition: color 0.3s ease;
			}
			
			.related-posts a:hover {
				color: var(--accent);
			}
			
			.related-post-date {
				font-size: 0.8rem;
				color: rgb(var(--gray));
				margin-top: 0.3rem;
			}
			
			.related-post-date svg {
				width: 12px;
				height: 12px;
				margin-right: 4px;
				fill: rgb(var(--gray));
				vertical-align: -1px;
			}
			
			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
				margin-top: 2rem;
			}
			
			.tag {
				padding: 0.3rem 0.8rem;
				background-color: #f0f0f0;
				border-radius: 20px;
				font-size: 0.8rem;
				color: rgb(var(--gray-dark));
				text-decoration: none;
				transition: all 0.3s ease;
			}
			
			.tag:hover {
				background-color: var(--accent);
				color: white;
			}
			
			.last-updated-on {
				font-style: italic;
				font-size: 0.9rem;
				color: rgb(var(--gray));
				margin-top: 1rem;
			}
			
			@media (max-width: 900px) {
				.content-wrapper {
					grid-template-columns: 1fr;
					gap: 2rem;
				}
				
				.hero-section {
					height: 400px;
				}
				
				.title-overlay h1 {
					font-size: 2.5rem;
				}
				
				.sidebar {
					position: relative;
					top: 0;
					order: 1;
				}
				
				.prose {
					order: 2;
				}
			}
			
			@media (max-width: 768px) {
				.hero-section {
					height: 350px;
				}
				
				.title-overlay {
					padding: 2rem 1.5rem 1.5rem;
				}
				
				.title-overlay h1 {
					font-size: 2.2rem;
				}
				
				.prose {
					font-size: 1rem;
				}
				
				.prose h2 {
					font-size: 1.6rem;
					margin-top: 2rem;
				}
				
				.prose h3 {
					font-size: 1.4rem;
				}
				
				.share-buttons {
					justify-content: center;
				}
				
				.sidebar-widget {
					padding: 1.25rem;
					margin-bottom: 1.5rem;
				}
			}
			
			@media (max-width: 600px) {
				.hero-section {
					height: 300px;
				}
				
				.title-overlay {
					padding: 1.5rem 1rem 1.25rem;
				}
				
				.title-overlay h1 {
					font-size: 1.8rem;
				}
				
				.article-meta {
					flex-wrap: wrap;
				}
				
				.article-meta .date {
					width: 100%;
					margin-left: 0;
					margin-top: 0.5rem;
				}
				
				.category-badge {
					padding: 0.4rem 0.8rem;
					font-size: 0.8rem;
				}
				
				.sidebar-widget h3 {
					font-size: 1.2rem;
				}
				
				.author-avatar {
					width: 70px;
					height: 70px;
					font-size: 1.7rem;
				}
				
				.prose blockquote {
					margin: 1.5rem 0;
					padding: 0.75rem 1rem;
				}
				
				.share-section {
					margin-top: 2rem;
					padding-top: 1.5rem;
				}
			}
			
			@media (max-width: 480px) {
				.hero-section {
					height: 250px;
				}
				
				.title-overlay h1 {
					font-size: 1.6rem;
				}
				
				.prose {
					font-size: 0.95rem;
				}
				
				.prose h2 {
					font-size: 1.5rem;
				}
				
				.prose h3 {
					font-size: 1.3rem;
				}
				
				.tag {
					padding: 0.25rem 0.6rem;
					font-size: 0.75rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-section">
					<div class="hero-image">
						{heroImage && <Image width={1200} height={600} src={heroImage} alt={title} />}
					</div>
					<div class="title-overlay">
						<span class="category-badge">{category}</span>
						<h1>{title}</h1>
						<div class="article-meta">
							<div class="avatar">CS</div>
							<span class="author-name">Coach Sportif</span>
							<div class="date">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
									<path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
								</svg>
								<FormattedDate date={pubDate} />
							</div>
						</div>
					</div>
				</div>
				
				<div class="content-wrapper">
					<div class="prose">
						<slot />
						
						{
							updatedDate && (
								<div class="last-updated-on">
									Dernière mise à jour le <FormattedDate date={updatedDate} />
								</div>
							)
						}
						
						<div class="tags">
							<a href="/blog?tag=fitness" class="tag">fitness</a>
							<a href="/blog?tag=nutrition" class="tag">nutrition</a>
							<a href="/blog?tag=entrainement" class="tag">entrainement</a>
							<a href="/blog?tag=sante" class="tag">santé</a>
						</div>
						
						<div class="share-section">
							<h4 class="share-title">Partager cet article</h4>
							<div class="share-buttons">
								<a href="#" class="share-button" aria-label="Partager sur Facebook">
									<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
										<path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/>
									</svg>
								</a>
								<a href="#" class="share-button" aria-label="Partager sur Twitter">
									<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
										<path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723 10.054 10.054 0 01-3.127 1.184 4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
									</svg>
								</a>
								<a href="#" class="share-button" aria-label="Partager par email">
									<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
										<path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
									</svg>
								</a>
								<a href="#" class="share-button" aria-label="Partager sur LinkedIn">
									<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
										<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452z"/>
									</svg>
								</a>
							</div>
						</div>
					</div>
					
					<aside class="sidebar">
						<div class="sidebar-widget author-widget">
							<div class="author-avatar">CS</div>
							<h3 class="author-name">Coach Sportif</h3>
							<p class="author-bio">Coach sportif diplômé et passionné, spécialisé dans la remise en forme et la nutrition. Plus de 10 ans d'expérience dans l'accompagnement personnalisé.</p>
							<a href="/about" class="read-more">En savoir plus</a>
						</div>
						
						<div class="sidebar-widget cta-widget">
							<h3>Prêt à transformer votre corps ?</h3>
							<p>Réservez une séance d'évaluation gratuite pour démarrer votre parcours fitness.</p>
							<a href="/contact" class="cta-button">Prendre rendez-vous</a>
						</div>
						
						<div class="sidebar-widget related-posts">
							<h3>Articles similaires</h3>
							<ul>
								<li>
									<a href="/blog/first-post/">5 exercices essentiels pour renforcer votre core</a>
									<div class="related-post-date">
										<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
											<path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
											<path d="M12.5 7H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
										</svg>
										23 mai 2023
									</div>
								</li>
								<li>
									<a href="/blog/second-post/">Guide complet de la nutrition pour les sportifs</a>
									<div class="related-post-date">
										<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
											<path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
											<path d="M12.5 7H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
										</svg>
										15 juin 2023
									</div>
								</li>
								<li>
									<a href="/blog/third-post/">Comment rester motivé tout au long de l'année</a>
									<div class="related-post-date">
										<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
											<path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
											<path d="M12.5 7H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
										</svg>
										8 juillet 2023
									</div>
								</li>
							</ul>
						</div>
					</aside>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
